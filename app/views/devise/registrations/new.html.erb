<div class="user_form_page row">
<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-control") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-label col-sm-6 col-xs-2">
    <%= f.label :email %></div>
  <div class="col-sm-6 col-xs-10">
    <%= f.email_field :email, autofocus: true, class: "form-control" %></div></div>
<div class="user_form_page row">
  <div class="form-label col-sm-6 col-xs-2">
    <%= f.label :password %></div>
  <div class="col-sm-6 col-xs-10">
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div></div>
<div class="user_form_page row">

  <div class="form-label col-sm-6 col-xs-2">
    <%= f.label :password_confirmation %></div>
  <div class="col-sm-6 col-xs-10">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div></div>
<div class="user_form_page row">

  <div class="form-label col-sm-6 col-xs-2">
    <%= f.label :first_name %></div>
  <div class="col-sm-6 col-xs-10">
    <%= f.text_field :first_name, class: "form-control" %></div></div>
<div class="user_form_page row">

  <div class="form-label col-sm-6 col-xs-2">
    <%= f.label :last_name %></div>
  <div class="col-sm-6 col-xs-10">
    <%= f.text_field :last_name, class: "form-control" %></div></div>

  <%= render 'form_part', f: f %>

<div class="user_form_page row">
  <div class="actions col-sm-12">
    <%= f.submit "Sign up", class: "form-control" %> or <%= link_to "Sign in", new_session_path(resource_name) %></div></div>
<% end %>

</div>
